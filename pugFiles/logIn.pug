doctype html

link(href='https://fonts.googleapis.com/css2?family=Sen:wght@700&display=swap' rel='stylesheet')


style
	include ../stylesheet.css

html
	include Templates/header.pug


div(class='inputFields')
	input#UserNameID.userDetailsClass(name='input1' type='text' placeholder='Name')
	br
	input#UserGenderID.userDetailsClass(name='input4' type='text' placeholder='Password')
	br
	button(id='saveButton') Log In

script(type='text/javascript').
	$('#saveButton').click(function(){
		var nameVal = $('.userDetailsClass')[0].value;
		var passwordVal = $('.userDetailsClass')[1].value;

		$.get('/ajaxLogin',
		{
			Name: nameVal,
			Password: passwordVal
		},
		function(data, status){
			document.cookie = 'token='+data.JWT;
			//window.location.replace('/users/'+data.id);
			window.location.replace('/user');
		});
	});

